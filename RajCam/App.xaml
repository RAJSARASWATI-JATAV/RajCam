<Application
    x:Class="RajCam.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Colors -->
            <SolidColorBrush x:Key="PrimaryBrush" Color="#00d4ff"/>
            <SolidColorBrush x:Key="AccentBrush" Color="#ffd700"/>
            <SolidColorBrush x:Key="DangerBrush" Color="#ff4444"/>
            <SolidColorBrush x:Key="DarkBrush" Color="#2a2a2a"/>
            
            <!-- Styles -->
            <Style x:Key="RoundButtonStyle" TargetType="Button">
                <Setter Property="CornerRadius" Value="25"/>
                <Setter Property="Width" Value="50"/>
                <Setter Property="Height" Value="50"/>
                <Setter Property="FontSize" Value="20"/>
            </Style>
            
            <Style x:Key="CaptureButtonStyle" TargetType="Button">
                <Setter Property="CornerRadius" Value="40"/>
                <Setter Property="Width" Value="80"/>
                <Setter Property="Height" Value="80"/>
                <Setter Property="FontSize" Value="40"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>