<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="RajCam.Views.ProCameraPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <!-- Camera Preview -->
        <Border Background="Black" Margin="0,70,0,100">
            <CaptureElement x:Name="ProPreviewControl" Stretch="UniformToFill"/>
        </Border>
        
        <!-- Face Detection Overlay -->
        <Canvas x:Name="FaceOverlay" Margin="0,70,0,100"/>
        
        <!-- Professional Controls Panel -->
        <Grid x:Name="ProControlsPanel" Width="400" HorizontalAlignment="Left" Background="#1a1a1a" Margin="0,70,0,100">
            <ScrollViewer>
                <StackPanel Padding="20">
                    <TextBlock Text="ðŸ“¸ PRO CONTROLS" FontSize="18" FontWeight="Bold" Foreground="#00d4ff" Margin="0,0,0,20"/>
                    
                    <!-- Manual Exposure -->
                    <TextBlock Text="Exposure" FontSize="14" Foreground="White" Margin="0,0,0,5"/>
                    <Slider x:Name="ExposureSlider" Width="360" Minimum="1" Maximum="1000" Value="100" ValueChanged="ExposureSlider_ValueChanged"/>
                    
                    <!-- Manual Focus -->
                    <TextBlock Text="Focus" FontSize="14" Foreground="White" Margin="0,10,0,5"/>
                    <Slider x:Name="FocusSlider" Width="360" Minimum="0" Maximum="100" Value="50" ValueChanged="FocusSlider_ValueChanged"/>
                    
                    <!-- ISO -->
                    <TextBlock Text="ISO" FontSize="14" Foreground="White" Margin="0,10,0,5"/>
                    <Slider x:Name="ISOSlider" Width="360" Minimum="100" Maximum="6400" Value="400" ValueChanged="ISOSlider_ValueChanged"/>
                    
                    <!-- White Balance -->
                    <TextBlock Text="White Balance" FontSize="14" Foreground="White" Margin="0,10,0,5"/>
                    <Slider x:Name="WhiteBalanceSlider" Width="360" Minimum="2000" Maximum="8000" Value="5500" ValueChanged="WhiteBalanceSlider_ValueChanged"/>
                    
                    <!-- AI Features -->
                    <TextBlock Text="AI FEATURES" FontSize="16" FontWeight="Bold" Foreground="#ffd700" Margin="0,20,0,10"/>
                    <ToggleSwitch x:Name="FaceDetectionToggle" Header="Face Detection" Foreground="White" Toggled="FaceDetectionToggle_Toggled"/>
                    <ToggleSwitch x:Name="BeautifyToggle" Header="AI Beautify" Foreground="White"/>
                    <ToggleSwitch x:Name="PortraitModeToggle" Header="Portrait Mode" Foreground="White"/>
                    
                    <!-- Video Modes -->
                    <TextBlock Text="VIDEO MODES" FontSize="16" FontWeight="Bold" Foreground="#ffd700" Margin="0,20,0,10"/>
                    <Button Content="4K Recording" Width="360" Margin="0,5" Click="Start4K_Click"/>
                    <Button Content="Slow Motion" Width="360" Margin="0,5" Click="StartSlowMotion_Click"/>
                    <Button Content="Timelapse" Width="360" Margin="0,5" Click="StartTimelapse_Click"/>
                    <Button Content="Live Stream" Width="360" Margin="0,5" Click="StartStream_Click"/>
                </StackPanel>
            </ScrollViewer>
        </Grid>
        
        <!-- Pro Capture Controls -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20">
            <Button x:Name="ProPhotoButton" Content="ðŸ“¸ PRO" FontSize="16" Width="100" Height="60" CornerRadius="30" 
                   Background="#00d4ff" Click="ProPhoto_Click" Margin="0,0,20,0"/>
            <Button x:Name="ProVideoButton" Content="ðŸŽ¥ PRO" FontSize="16" Width="100" Height="60" CornerRadius="30" 
                   Background="#ff4444" Click="ProVideo_Click"/>
        </StackPanel>
        
        <!-- Stream Status -->
        <TextBlock x:Name="StreamStatus" Text="" FontSize="14" Foreground="#00ff00" 
                  HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,90,20,0"/>
    </Grid>
</Page>