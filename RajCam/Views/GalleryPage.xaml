<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="RajCam.Views.GalleryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <Grid.Background>
            <AcrylicBrush TintColor="Black" TintOpacity="0.8"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0">
            <TextBlock Text="ðŸ“¸ GALLERY" FontSize="24" FontWeight="Bold" Foreground="#00d4ff" 
                      HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>

        <!-- Gallery Grid -->
        <ScrollViewer Grid.Row="1">
            <GridView x:Name="GalleryGrid" Padding="20" SelectionMode="Single" SelectionChanged="GalleryGrid_SelectionChanged">
                <GridView.ItemTemplate>
                    <DataTemplate>
                        <Border Width="200" Height="150" CornerRadius="10" Background="#333">
                            <StackPanel>
                                <TextBlock Text="{Binding Name}" FontSize="12" Foreground="White" 
                                          Margin="10" TextTrimming="CharacterEllipsis"/>
                                <TextBlock Text="{Binding DateCreated}" FontSize="10" Foreground="#aaa" 
                                          Margin="10,0"/>
                                <TextBlock Text="{Binding Type}" FontSize="10" Foreground="#00d4ff" 
                                          Margin="10,0"/>
                                <StackPanel Orientation="Horizontal" Margin="10">
                                    <Button Content="ðŸ“¤" FontSize="12" Width="30" Height="30" 
                                           Click="Export_Click" Tag="{Binding}" Margin="0,0,5,0"/>
                                    <Button Content="ðŸ—‘ï¸" FontSize="12" Width="30" Height="30" 
                                           Click="Delete_Click" Tag="{Binding}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>
        </ScrollViewer>
        
        <!-- Export Panel -->
        <Grid x:Name="ExportPanel" Width="300" HorizontalAlignment="Right" Background="#2a2a2a" Visibility="Collapsed">
            <StackPanel Padding="20">
                <TextBlock Text="ðŸ“¤ EXPORT OPTIONS" FontSize="18" FontWeight="Bold" Foreground="White" Margin="0,0,0,20"/>
                <Button Content="Export to Pictures" Width="260" Margin="0,0,0,10" Click="ExportToPictures_Click"/>
                <Button Content="Export to Custom Location" Width="260" Margin="0,0,0,10" Click="ExportToCustom_Click"/>
                <Button Content="Share" Width="260" Margin="0,0,0,10" Click="Share_Click"/>
                <Button Content="Close" Width="260" Margin="0,20,0,0" Click="CloseExport_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>